@model CarHouse.Models.InvoiceFormViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Invoice</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Invoice.Number" class="control-label"></label>
                <input asp-for="Invoice.Number" class="form-control" />
                <span asp-validation-for="Invoice.Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Invoice.CreatedDate" class="control-label"></label>
                <input asp-for="Invoice.CreatedDate" class="form-control" />
                <span asp-validation-for="Invoice.CreatedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Invoice.WarrantyDate" class="control-label"></label>
                <input asp-for="Invoice.WarrantyDate" class="form-control" />
                <span asp-validation-for="Invoice.WarrantyDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Invoice.Value" class="control-label"></label>
                <input asp-for="Invoice.Value" class="form-control" />
                <span asp-validation-for="Invoice.Value" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Invoice.ClientId" class="control-label"></label>
                <select asp-for="Invoice.ClientId" class="form-control" asp-items="@(new SelectList(Model.Clients, "Id", "Name"))"></select>
            </div>
            <div class="form-group">
                <label asp-for="Invoice.SellerId" class="control-label"></label>
                <select asp-for="Invoice.SellerId" class="form-control" asp-items="@(new SelectList(Model.Sellers, "Id", "Name"))"></select>
            </div>
            <div class="form-group">
                <label asp-for="Invoice.CarId" class="control-label"></label>
                <select asp-for="Invoice.CarId" class="form-control" asp-items="@(new SelectList(Model.Cars, "Id", "Model"))"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="form-group">
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
